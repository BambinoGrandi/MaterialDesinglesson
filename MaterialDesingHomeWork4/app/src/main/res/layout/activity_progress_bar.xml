<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgressBar">

    <Button
        android:id="@+id/btn_show_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show progress bar"
        android:onClick="showProgressBar"/>

    <Button
        android:id="@+id/btn_hide_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide progress bar"
        android:onClick="hideProgressBar"/>

    <ProgressBar
        android:id="@+id/pb_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="invisible"
        android:indeterminate="true"/>

</LinearLayout>